<Window x:Class="KyrsClient.Views.AddEditClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KyrsClient.Views"
        mc:Ignorable="d"
        Background="#333"
        Title="Добавление клиента" Height="590" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0 5" Grid.Row="0">
            <Label Content="Введите имя" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="FirstName" Text="{Binding FirstName}" Margin="20 0"/>
        </StackPanel>
        <StackPanel Margin="0 5" Grid.Row="1">
            <Label Content="Введите фамилию" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="LastName" Text="{Binding LastName}" Grid.Row="1" Margin="20 15"/>
        </StackPanel>
        <StackPanel Margin="0 5" Grid.Row="2">
            <Label Content="Введите адрес" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Address" Text="{Binding Address}" Grid.Row="2" Margin="20 15"/>
        </StackPanel>
        <StackPanel Margin="0 5" Grid.Row="3">
            <Label Content="Введите телефон" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Phone" Text="{Binding Phone}" Grid.Row="3" Margin="20 15"/>
        </StackPanel>
        <StackPanel Margin="0 5" Grid.Row="4">
            <Label Content="Введите email" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Email" Text="{Binding Email}" Grid.Row="4" Margin="20 15"/>
        </StackPanel>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="OK" Grid.Column="0" Margin="20 10" Height="50" Click="Button_Click"
                    Style="{StaticResource DialogStyle}"/>
            <Button Content="Cancel" Grid.Column="1" Margin="20 10" Height="50" Click="Button_Click_1"
                    Style="{StaticResource DialogStyle}"/>
        </Grid>
    </Grid>
</Window>
