<Window x:Class="KyrsClient.Views.AddEditProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KyrsClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Background="#333"
      Title="AddEditProduct">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Наименование:" Margin="0,5" Foreground="White"/>
        <TextBox Grid.Row="1" Text="{Binding Name}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Категория:" Margin="0,5" Foreground="White"/>
        <TextBox Grid.Row="3" Text="{Binding Category}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="Производитель:" Margin="0,5" Foreground="White"/>
        <TextBox Grid.Row="5" Text="{Binding Manufacturer}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="6" Text="Артикул:" Margin="0,5" Foreground="White"/>
        <TextBox Grid.Row="7" Text="{Binding PartNumber}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="8" Text="Описание:" Margin="0,5" Foreground="White"/>
        <TextBox Grid.Row="9" Text="{Binding Description}" 
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" Height="80" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Margin="5"  
                    Command="{Binding SaveCommand}" IsDefault="True" Background="#333"/>
            <Button Content="Отмена" Width="80" Margin="5" 
                    Command="{Binding CancelCommand}" IsCancel="True" Background="#333"/>
        </StackPanel>
    </Grid>
    </Window>