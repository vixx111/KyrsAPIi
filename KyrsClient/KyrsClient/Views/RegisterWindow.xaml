<Window x:Class="KyrsClient.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KyrsClient.Views"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        Background="Black"
        Title="Регистрация" Height="250" Width="310">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="1" x:Name="Login" Grid.Row="0" Margin="10"/>
        <PasswordBox Grid.Column="1" x:Name="Password" Grid.Row="1" Margin="10"/>
        <PasswordBox Grid.Column="1" x:Name="PasswordRepeat" Grid.Row="2" Margin="10"/>
        <Button Grid.Column="1" Style="{StaticResource DialogStyle}" Grid.Row="3" Content="Зарегистрироваться" Margin="35 10" Click="Button_Click"/>
        
    </Grid>
</Window>
